{
  "name": "axel",
  "version": "0.0.1",
  "description": "mtg simulator",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "build:incremental": "tsc --build tsconfig.incremental.json",
    "db:reset": "TS_NODE_FILES=true ts-node ./src/scripts/resetMongoDbDatabase.ts",
    "db:reset:js": "node ./dist/scripts/resetMongoDbDatabase.js",
    "delete:prod": "pm2 delete \"axel-backend\"",
    "docker:rebuild:app": "docker-compose -f docker-compose.yml -f docker-compose.test.yml rm -fv app && docker-compose -f docker-compose.yml -f docker-compose.test.yml build app",
    "docker:down:ci": "docker-compose -f docker-compose.yml -f docker-compose.test.yml down",
    "docker:up:ci": "docker-compose -f docker-compose.yml -f docker-compose.test.ci.yml up -d",
    "docker:up:ci:linux": "docker-compose -f docker-compose.yml -f docker-compose.test.ci.linux.yml up -d",
    "docker:up:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "lint": "eslint src",
    "postinstall": "husky install || exit 0",
    "prebuild": "rimraf dist",
    "setup:local": "node ./dist/scripts/setUpLocalEnv.js",
    "setup:local:ts": "TS_NODE_FILES=true ts-node ./src/scripts/setUpLocalEnv.ts",
    "start": "TS_NODE_FILES=true ts-node ./src/index.ts",
    "start:docker": "pm2-runtime start ./dist/index.js --watch --name \"axel-backend\"",
    "start:prod": "pm2 start ./dist/index.js --watch --name \"axel-backend\"",
    "stop:prod": "pm2 stop \"axel-backend\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:js": "jest --config=jest.dist.config.js",
    "test:js:ci": "npm run test:js -- --ci",
    "test:js:coverage": "npm run test:js -- --coverage",
    "test:end2end": "jest --selectProjects End2End",
    "test:end2end:js": "npm run test:js -- --selectProjects End2End",
    "test:integration": "jest --selectProjects Integration",
    "test:integration:js": "npm run test:js -- --selectProjects Integration",
    "test:unit": "jest --selectProjects Unit",
    "test:unit:js": "npm run test:js -- --selectProjects Unit",
    "test:unit:js:ci": "npm run test:unit:js -- --ci",
    "ws-server:delete:prod": "pm2 delete \"axel-ws-server\"",
    "ws-server:start": "TS_NODE_FILES=true ts-node ./src/scripts/start-ws-server.ts",
    "ws-server:start:prod": "pm2 start ./dist/scripts/start-ws-server.js --watch --name \"axel-ws-server\"",
    "ws-server:stop:prod": "pm2 stop \"axel-ws-server\""
  },
  "keywords": [
    "axel",
    "mtg"
  ],
  "author": "Roberto Pintos LÃ³pez",
  "engines": {
    "node": ">=12"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/lodash": "^4.14.168",
    "@types/mongodb": "^3.6.10",
    "@types/ncp": "^2.0.4",
    "@types/node": "^12.19.14",
    "@types/uuid": "^8.3.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "axios": "^0.21.1",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "light-my-request": "^4.4.1",
    "lint-staged": "^10.5.4",
    "ncp": "^2.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "argon2": "^0.27.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.14.1",
    "http-status-codes": "^2.1.4",
    "inversify": "^5.0.5",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongodb": "^3.6.5",
    "pm2": "^4.5.5",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3.2",
    "ws": "^7.4.4"
  }
}
